<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Tinyproject.Views.InfoSelectionPage"
            >
    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Delete" Order="Primary" Priority="0" Clicked="ToolbarItem_Clicked"/>
    </ContentPage.ToolbarItems>

    <ContentPage.Content>
        <StackLayout Margin="16" Spacing="0" Orientation="Vertical" VerticalOptions="Center">
            <Label FontAttributes="Bold" Text="What info would you like" FontSize="Medium" TextColor="Black" />
            <Frame BackgroundColor="#F5E1FD" OutlineColor="#800080" Margin="2,16" Padding="16,0">
                <StackLayout Spacing="0">
                    <Button x:Name="btnCompanyInfo" Text="Company Info" TextColor="White" BackgroundColor="#800080" Margin="10" />
                    <Button x:Name="btnPriceInfo" Text="Price Info" TextColor="White" BackgroundColor="#800080" Margin="10" />
                </StackLayout>
            </Frame>
            <!--<Button x:Name="btnAdd" Text="ADD" TextColor="White" BackgroundColor="#800080" Margin="0" />-->
        </StackLayout>
    </ContentPage.Content>



</ContentPage>
